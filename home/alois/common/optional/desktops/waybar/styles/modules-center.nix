# Mechabar styles/modules-center.css - Center module styles
# Adapted from github.com/sejjy/mechabar
''
  /*===================
      CENTER MODULES
  ===================*/

  /*------------------
      window count
  ------------------*/

  #windowcount {
    margin-right: 12px;
  }
  #windowcount label {
    color: alpha(@base05, 0.75);
  }

  /*-----------------
      temperature
  -----------------*/

  #custom-left_div.2 {
    color: @base02;
  }

  #temperature {
    background-color: @base02;
    padding: 0 6px;
    color: @base05;
  }

  /*------------
      memory
  ------------*/

  #custom-left_div.3 {
    background-color: @base02;
    color: @base03;
  }

  #memory {
    background-color: @base03;
    padding: 0 6px;
    color: @base05;
  }

  /*---------
      cpu
  ---------*/

  #custom-left_div.4 {
    background-color: @base03;
    color: @base04;
  }

  #cpu {
    background-color: @base04;
    padding: 0 6px;
    color: @base05;
  }

  #custom-left_inv.1 {
    background-color: @base04;
    color: @base00;
  }

  /*-----------------
      distro icon
  -----------------*/

  #custom-left_div.5 {
    background-color: @base00;
    color: @base0D;
  }

  #custom-right_div.2 {
    background-color: @base00;
    color: @base0D;
  }

  #custom-distro {
    padding: 0 10px 0 5px;
    background-color: @base0D;
    color: @base00;
  }

  /*--------------------
      idle inhibitor
  --------------------*/

  #custom-right_inv.1 {
    background-color: @base04;
    color: @base00;
  }

  #idle_inhibitor {
    background-color: @base04;
    padding: 0 6px;
    color: @base05;
  }

  /*----------
      time
  ----------*/

  #clock.time {
    padding: 0 6px;
    padding-right: 6px;
    background-color: @base04;
    color: @base05;
  }

  #custom-right_div.3 {
    background-color: @base03;
    color: @base04;
  }

  /*----------
      date
  ----------*/

  #clock.date {
    padding: 0 6px;
    padding-left: 6px;
    background-color: @base03;
    color: @base05;
  }

  #custom-right_div.4 {
    background-color: @base02;
    color: @base03;
  }

  /*-----------------
      system tray
  -----------------*/

  #network {
    background-color: @base02;
    padding: 0 6px 0 4px;
    color: @base05;
  }

  #bluetooth {
    background-color: @base02;
    padding: 0 5px;
    color: @base05;
  }

  #custom-system_update {
    background-color: @base02;
    padding: 0 8px 0 2px;
    color: @base05;
  }

  #custom-right_div.5 {
    color: @base02;
  }
''
