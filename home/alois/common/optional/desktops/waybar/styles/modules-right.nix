# Mechabar styles/modules-right.css - Right module styles
# Adapted from github.com/sejjy/mechabar
''
  /*===================
      RIGHT MODULES
  ===================*/

  /*----------------
      media info
  ----------------*/

  #mpris {
    padding: 0 12px;
    color: @base05;
  }

  /*------------
      volume
  ------------*/

  #custom-left_div.6 {
    color: @base02;
  }

  #pulseaudio,
  #wireplumber {
    background-color: @base02;
    padding: 0 6px;
    color: @base05;
  }

  /*----------------
      brightness
  ----------------*/

  #custom-left_div.7 {
    background-color: @base02;
    color: @base03;
  }

  #backlight {
    background-color: @base03;
    padding: 0 6px;
    color: @base05;
  }

  /*-------------
      battery
  -------------*/

  #custom-left_div.8 {
    background-color: @base03;
    color: @base04;
  }

  #battery {
    background-color: @base04;
    padding: 0 6px;
    color: @base05;
  }

  #custom-left_inv.2 {
    background-color: @base04;
    color: @base00;
  }

  /*----------------
      power menu
  ----------------*/

  #custom-power_menu {
    border-radius: 16px;
    padding: 0 19px 0 16px;
    color: @base0D;
  }

  #custom-power_menu:hover {
    background-color: @base01;
  }

  /*----------------
      notifications
  ----------------*/

  #custom-notifications {
    border-radius: 16px;
    padding: 0 19px 0 16px;
    color: @base0D;
  }

  #custom-notifications:hover {
    background-color: @base01;
  }
''
